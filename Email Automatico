#Calcular os indicadores
tabela = pandas.read_excel (r"C:\Users\henri\Downloads\Vendas - Dez.xlsx")
display (tabela)
Quantidade = tabela ["Quantidade"].sum()
Faturamento = tabela ["Valor Final"].sum()

print (Quantidade)
print (Faturamento)

#Entrar no Email
pyautogui.hotkey ("ctrl", "t")
